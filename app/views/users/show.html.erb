<div class="container">
  <h1> <%= @user.first_name %> </h1>
</div>
<div class="container">
  <% @user.art.each do |art| %>
    <%= link_to art.title, art %> |
    <% if current_user.first_name == @user.first_name %>
      <%= link_to "Edit", [:edit, art] %> |
      <%= link_to "Delete", art_path(art), method: :delete, data: { confirm: 'Are you sure?' } %>
    <% end %>
    <pre><%= art.text %></pre>
  <% end %>
  <%= link_to "New Art", new_art_path %>
</div>
