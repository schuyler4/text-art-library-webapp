<div class="container">
  <h1> Login </h1>
  <%= form_for(:session, url: login_path) do |f| %>
    <div class="form-group has-danger">
      <%= f.email_field :email, class: "form-control form-control-danger", placeholder: "Email"%>
    </div>
    <div class="form-group has-danger">
      <%= f.password_field :password, class: "form-control form-control-danger", placeholder: "Password"%>
    </div>
    <%= f.submit "Login", class: "btn btn-primary"%>
  <% end %>
</div>
